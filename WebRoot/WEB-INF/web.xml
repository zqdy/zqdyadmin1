<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_9" version="2.4"
	xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

	<display-name>zqdy</display-name>

	<context-param>
		<description></description>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			/WEB-INF/classes/applicationContext.xml
		</param-value>
	</context-param>
	<context-param>
		<param-name>quartzConfigureFileName</param-name>
		<param-value>quartzDefault.properties</param-value>
	</context-param>
	
	<filter>
		<filter-name>openSessionInView</filter-name>
		<filter-class>
			com.zqdy.core.utils.OurOpenSessionInViewFilter
		</filter-class>
		<init-param>
			<param-name>singleSession</param-name>
			<param-value>false</param-value>
		</init-param>

	</filter>
	<filter-mapping>
		<filter-name>openSessionInView</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<filter> 
        <filter-name>UrlRewriteFilter</filter-name> 
        <filter-class>org.tuckey.web.filters.urlrewrite.UrlRewriteFilter</filter-class> 
    </filter> 
    <filter-mapping> 
        <filter-name>UrlRewriteFilter</filter-name> 
        <url-pattern>/*</url-pattern> 
    </filter-mapping> 
	
	<filter>
		<filter-name>struts2</filter-name>
		<filter-class>
			org.apache.struts2.dispatcher.FilterDispatcher
		</filter-class>
		<init-param> 
			<param-name>config</param-name> 
			<param-value> 
				struts-default.xml,struts-plugin.xml,struts.xml 
			</param-value> 
		</init-param> 
		
	</filter>

	<!-- 字符转码 -->
	<filter>
		<filter-name>codeFilter</filter-name>
		<filter-class>
			com.zqdy.core.common.filter.EncodingFilter
		</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter>
		<filter-name>SessionFilter</filter-name>
		<filter-class>com.zqdy.core.common.filter.SessionFilter</filter-class>
	</filter>
	
	<listener>
		<listener-class>
			com.zqdy.core.common.listener.SessionListerner
		</listener-class>
	</listener>
	<filter-mapping>
		<filter-name>codeFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>SessionFilter</filter-name>
		<url-pattern>/admin/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>struts2</filter-name>
		<url-pattern>/*</url-pattern>
		<dispatcher>REQUEST</dispatcher> 
        <dispatcher>FORWARD</dispatcher> 
	</filter-mapping>
	
	<listener>
		<description></description>
		<listener-class>
			org.springframework.web.context.ContextLoaderListener
		</listener-class>
	</listener>

	<listener>
		<listener-class>
			org.springframework.web.context.request.RequestContextListener
		</listener-class>
	</listener> 
	<servlet>
		<servlet-name>SystemStart</servlet-name>
		<servlet-class>com.zqdy.core.sys.ScheduleInit</servlet-class>
		<load-on-startup>3</load-on-startup>
	</servlet>	
	<servlet-mapping>
		<servlet-name>SystemStart</servlet-name>
		<url-pattern>/SystemStart</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>indexPage.action</welcome-file>
	</welcome-file-list>

